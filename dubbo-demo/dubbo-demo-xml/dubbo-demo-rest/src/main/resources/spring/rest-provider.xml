<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://dubbo.apache.org/schema/dubbo"
       xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
       http://dubbo.apache.org/schema/dubbo http://dubbo.apache.org/schema/dubbo/dubbo.xsd http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="org.apache.dubbo.samples.rest"/>

    <dubbo:application name="rest-provider" owner="programmer" organization="dubbo"/>

    <dubbo:registry address="zookeeper://${zookeeper.address:127.0.0.1}:2181"/>

    <!-- use netty server -->
    <!--<dubbo:protocol name="rest" port="8888" keepalive="true" server="netty" iothreads="5" threads="100" contextpath="services"/>-->

    <!-- use tomcat server -->
    <dubbo:protocol name="rest" port="8888" threads="500" contextpath="services"
                    extension="org.apache.dubbo.samples.rest.extension.ExceptionMapperForTest"/>

    <dubbo:protocol name="dubbo" port="20880" threads="200"/>

    <dubbo:service interface="org.apache.dubbo.samples.rest.api.JaxRsRestDemoService"
                   ref="jaxRsRestDemoService" protocol="rest" timeout="2000" connections="100"
                   validation="true"/>

    <dubbo:service interface="org.apache.dubbo.samples.rest.api.SpringRestDemoService"
                   ref="springRestDemoService" protocol="rest" timeout="2000" connections="100"
                   validation="true"/>

    <dubbo:service interface="org.apache.dubbo.samples.rest.api.HttpMethodService"
                   ref="httpMethodService" protocol="rest" timeout="2000" connections="100"
                   validation="true"/>

    <dubbo:service interface="org.apache.dubbo.samples.rest.api.HttpRequestAndResponseRPCContextService"
                   ref="httpRequestAndResponseRPCContextService" protocol="rest" timeout="2000" connections="100"
                   validation="true"/>
    <dubbo:service interface="org.apache.dubbo.samples.rest.api.ExceptionMapperService"
                   ref="exceptionMapperService" protocol="rest" timeout="2000" connections="100"
                   validation="true"/>
</beans>
